<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="login">
      <h2 class="text-center">登录</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
        <div class="form-inputs">
          <div class="group">
            <%= f.input :email, label: false, placeholder: "邮箱", required: false, autofocus: true %>
          </div>
          <div class="group">
            <%= f.input :password, label: false, placeholder: "密码, 至少#{@minimum_password_length} 个字符", required: false %>
          </div>
          <div class="group">
            <div class="checkbox">
              <%= f.input :remember_me, label: "记住我", as: :boolean if devise_mapping.rememberable? %>
            </div>
            <span class="pull-right">
              <%= link_to "忘记密码?", new_password_path(resource_name) %><br />
            </span>
          </div>
        </div>

        <div class="form-actions">
          <div class="group">
            <%= f.button :submit, "登录", class: "btn btn-danger btn-block"%>
          </div>
        </div>
      <% end %>

      <p class="text-center">
        <%= link_to "没有账号，立即注册", new_registration_path(resource_name) %><br />
      </p>
    </div>
  </div>
</div>
