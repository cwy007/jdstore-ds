<div class="pull-right" style="padding:10px">

  <% case order.aasm_state %>
  <% when "order_placed" %>
    <%= link_to "取消订单", cancel_admin_order_path(order), method: :post,
                class: "btn btn-default btn-sm" %>

  <% when "paid" %>
    <%= link_to "取消订单", cancel_admin_order_path(order), method: :post,
                  class: "btn btn-warning btn-sm" %>

    <%= link_to "出货中", ship_admin_order_path(order), method: :post,
                  class: "btn btn-success btn-sm" %>

  <% when "shipping" %>
    <%= link_to "设为已出货", shipped_admin_order_path(order), method: :post,
                  class: "btn btn-success btn-sm" %>

  <% when "shipped" %>
    <%= link_to "退货", return_admin_order_path(order), method: :post,
                  class: "btn btn-danger btn-sm" %>

  <% when "good_returned" %>
    <span class="label label-danger">已退货</span>

  <% when "order_cancelled" %>
  <span class="label label-warning">订单已取消</span>

  <% end %>

</div>
