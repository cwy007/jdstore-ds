<h2>修改类别(Category)</h2>

<%= simple_form_for [:admin, @category] do |f| %>
  <div class="group">
    <%= f.input :name %>
  </div>

  <% if @category.category_icon.present? %>
    <h5>目前的 category_icon </h5>
    <%= image_tag (@category.category_icon.thumb.url) %>
  <% end %>

  <div class="group">
    <%= f.input :category_icon, as: :file %>
  </div>

  <%= f.submit "提交", class: "btn btn-default", data: { disable_with: "提交..." } %>
<% end %>
