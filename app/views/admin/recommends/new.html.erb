<h2>新增Recommend</h2>

<%= simple_form_for [:admin, @recommend] do |f| %>
  <div class="group">
    <%= f.input :name %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <div class="group">
    <%= f.input :link %>
  </div>

  <%= f.submit "提交", class: "btn btn-default", data: { disable_with: "提交..." } %>
<% end %>
