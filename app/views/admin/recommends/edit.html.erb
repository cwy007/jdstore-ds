<h2>修改Recommend</h2>

<%= simple_form_for [:admin, @recommend] do |f| %>
  <div class="group">
    <%= f.input :name %>
  </div>

  <div class="group">
    <%= f.input :description %>
  </div>

  <% if @recommend.image.present? %>
    <h5>目前的recomment用图 </h5>
    <%= image_tag (@recommend.image.thumb.url) %>
  <% end %>

  <div class="group">
    <%= f.input :image, as: :file %>
  </div>

  <%= f.submit "提交", class: "btn btn-default", data: { disable_with: "提交..." } %>
<% end %>
