<%= simple_form_for [:admin, @product] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :quantity %>
  <%= f.input :price %>
  <% if @product.photos.present? %>
    <span>目前商品圖</span> <br>
    <% @product.photos.each do |p| %>
      <%= image_tag p.image.thumb.url %><br>
    <% end %>
  <% end %>
  <%= f.label :image %><br>
  <%= f.file_field :image, :multiple => true, name: "photos[image][]" %>

  <br>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." }, class: "btn btn-primary btn-block" %>
<% end %>
<br/>
