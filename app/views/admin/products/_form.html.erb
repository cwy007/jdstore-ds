<%= simple_form_for [:admin, @product] do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :quantity %>
  <%= f.input :price %>
  <% if @product.image.present? %>
    <h5>当前商品图</h5>
    <%= image_tag(@product.image.thumb.url) %>
  <% end %>
  <%= f.input :image, as: :file %>
  <%= f.submit "Submit", data: { disable_with: "Submitting..." }, class: "btn btn-primary btn-block" %>
<% end %>
<br/>
<%= link_to "Back to Products list", admin_products_path, class: "btn btn-danger btn-block" %>
