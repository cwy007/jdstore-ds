<div class="row">
  <div class="col-xs-12 col-md-6">
    <% if @photos.present? %>
      <% @photos.each_with_index do |p, index| %>   
        <% if index == 0 %>
          <%= image_tag p.image.medium.url %>
          <!-- 为了去掉bootstrap thumbnail添加到图片上的外边距，对齐图片 -->
        <div style="letter-spacing: -8px">
        <% else %>
          <%= image_tag p.image.thumb.url %>
          <% end %>
        <% end %>
        </div>
    <% else %>
      <%= image_tag("http://placehold.it/400x400&text=No Pic", class: "thumbnail") %>  #图片占位符
    <% end %>
  </div>
  <div class="col-xs-12 col-md-6">
    <h2><%= @product.title %></h2>
    <p><%= simple_format(@product.description) %></p>
    <p>数量：<%= @product.quantity %></p>
    <p>¥ <%= @product.price %></p>
    <div class="pull-right">
      <% if @product.quantity.present? && @product.quantity > 0 %>
        <%= link_to "加入购物车", add_to_cart_product_path(@product), method: :post, class: "btn btn-lg btn-danger" %>
      <% else %>
        已销售一空，无法购买
      <% end %>
    </div>
  </div>
