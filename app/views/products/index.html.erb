<div class="row">
  <!-- start of category nav -->
  <nav class="navbar category_nav">
    <div class="container-fluid">
      <div class="col-md-10 col-md-offset-1">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
          <ul class="nav navbar-nav">
            <li class="home"><%= link_to "首页", products_path %></li>
            <% Category.all.each do |category|%>
                <li>
                  <%= link_to products_path(category: category.name) do %>
                  <div class="category-icon">
                    <img src="http://placehold.it/50x50&text=No Pic" alt="icon">
                  </div>
                  <div>
                    <%= category.name %>
                  </div>
                  <% end %>
                </li>
            <% end %>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div>
    </div><!-- /.container-fluid -->
  </nav>
  <!-- end of category nav -->
  <hr>
  <!-- start of product list  -->
  <div class="col-md-10 col-md-offset-1">
    <h2>Product List</h2>
    <div class="container">
      <div class="row">
        <% @products.each do |product| %>
          <%= link_to product_path(product) do %>
            <div class="col-xs-6 col-md-3">
              <% if product.photos.present? %>
                <%= image_tag(product.photos[0].image.thumb.url, class: "thumbnail") %>
              <% else %>
                <%= image_tag("http://placehold.it/200x200&text=No Pic", class: "thumbnail" ) %>
              <% end %>
              <div><%= product.title %> : ¥<%= product.price %></div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
